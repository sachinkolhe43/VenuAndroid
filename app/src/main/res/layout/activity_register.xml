<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/images3"
    tools:context=".activity.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        app:titleTextColor="@color/white"
        app:title="Welcome To Venue Booking App"
        android:background="#546DEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="15dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:id="@+id/loginText"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/holo_blue_dark"/>


            <EditText
                android:background="@drawable/custom_edittext"
                android:id="@+id/editUser_name"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Your's GoodName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/custom_edittext"
                android:id="@+id/editUser_email"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:hint="Your's EmailId"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/custom_edittext"
                android:id="@+id/editUser_pass"
                android:textColor="@color/black"
                android:padding="8dp"
                android:layout_marginTop="40dp"
                android:hint="Your's Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/custom_edittext"
                android:id="@+id/editConfirmPassword"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Confirm Your Password"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/custom_edittext"
                android:id="@+id/editUser_contact"
                android:hint="Your's Contact"
                android:padding="8dp"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:inputType="number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <EditText
                android:background="@drawable/custom_edittext"
                android:id="@+id/editUser_address"
                android:textColor="@color/black"
                android:layout_marginTop="40dp"
                android:padding="8dp"
                android:hint="Your's Address"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:backgroundTint="#2EBACC"
            android:layout_marginRight="20dp"
            android:onClick="register"
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:backgroundTint="#EAB517"
            android:layout_marginLeft="20dp"
            android:id="@+id/btnCancel"
            android:text="Cancel"
            android:onClick="cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

</LinearLayout>
