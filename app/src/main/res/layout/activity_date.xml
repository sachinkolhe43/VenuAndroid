<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:backgroundTint="#81B1D8"
    tools:context=".activity.DateActivity">
<LinearLayout
    android:layout_marginLeft="50dp"
    android:layout_marginTop="200dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imageCalander1"
        android:layout_width="50dp"
        android:layout_height="85dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/calenderlogo"
        tools:layout_editor_absoluteY="250dp" />

    <TextView
        android:id="@+id/textFdate"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:layout_weight="30"
        android:text="From Date"
        android:textSize="30dp" />
</LinearLayout>

    <LinearLayout
        android:layout_marginLeft="50dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imageCalander2"
            android:layout_width="50dp"
            android:layout_height="85dp"
            android:layout_marginEnd="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/calenderlogo"
            tools:layout_editor_absoluteY="250dp" />

        <TextView
            android:id="@+id/textTodate"
            android:layout_width="262dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="50dp"
            android:layout_weight="30"
            android:text="To Date"
            android:textSize="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnTotalDays"
            android:text="Total Days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/textTotal"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:text="Total Days"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/btnNext"
        android:text="Next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></Button>
    </LinearLayout>
</LinearLayout>